{
  "name": "quickapi-express",
  "version": "1.0.0",
  "description": "Same design goals as QuickAPI: clean structure, logging, error handling, persistence, and production Docker setup.",
  "author": "John Desjardins",
  "license": "MIT",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "node --watch --import tsx src/index.ts",
    "build": "tsc && tsc-alias",
    "clean": "rimraf dist && npm run build",
    "start": "node dist/index.js",
    "rebuild": "npm run build && npm start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "docker:build": "docker build -t quickapi-express .",
    "docker:run": "docker run -dp 3000:3000 quickapi-express",
    "docker:up": "docker compose up --build"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.1.0",
    "@prisma/client": "^6.18.0",
    "colorette": "^2.0.20",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "moment": "^2.30.1",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^24.9.2",
    "@types/pino": "^7.0.4",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "prisma": "^6.18.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  }
}
